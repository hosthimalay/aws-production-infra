# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars is gitignored — never commit secrets

aws_region   = "eu-west-1"
environment  = "dev"
project_name = "himalay-aws-infra"

# VPC
vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.11.0/24", "10.0.12.0/24"]
availability_zones   = ["eu-west-1a", "eu-west-1b"]

# EC2 / ASG
instance_type        = "t3.micro"
asg_min_size         = 1
asg_max_size         = 3
asg_desired_capacity = 2

# RDS — CHANGE THESE
db_instance_class = "db.t3.micro"
db_name           = "appdb"
db_username       = "adminuser"
db_password       = "CHANGE_ME_use_strong_password_123!"

# S3 — must be globally unique
s3_bucket_name = "himalay-app-bucket-2024"

# Alerts
alert_email = "hosthimalay@gmail.com"
